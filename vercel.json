{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
 "routes": [
    {
      "src": "/vite.svg",
      "headers": {
        "Content-Type": "image/svg+xml",
        "Cache-Control": "public, max-age=0, must-revalidate"
      },
      "dest": "/vite.svg"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
