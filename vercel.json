{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "outputDirectory": "dist",
  "rewrites": [
     {
      "source": "/vite.svg",
      "destination": "/vite.svg"
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
      {
        "source": "/vite.svg",
        "headers": [
          { "key": "Content-Type", "value": "image/svg+xml" },
          { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
        ]
      }
    ]
}
